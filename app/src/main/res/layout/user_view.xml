<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="15sp"
    android:paddingTop="10sp"
    android:paddingRight="15sp"
    android:paddingBottom="10sp">

    <TextView
        android:id="@+id/tv_user_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_weight="1"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/ib_promote_to_admin"
        style="@style/SimpleActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_shield_gray_30dp" />

    <ImageButton
        android:id="@+id/ib_delete_user"
        style="@style/SimpleActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_delete_black_30dp" />
</LinearLayout>